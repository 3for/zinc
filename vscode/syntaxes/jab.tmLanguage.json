{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Jabberwocky",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.jab",
					"match": "\\b(inputs|witness|for|in|while|if|else|require|debug|let|mut|type|struct)\\b"
				},
				{
					"name": "keyword.other",
					"match": "\\b(bool|uint[0-9]+|int[0-9]+|field|true|false|as)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.jab",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jab",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.jab",
					"match": "\\b(0|[1-9][0-9]*|0x[0-9a-fA-F]+)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.jab",
					"begin": "//",
					"end": "\n"
				},
				{
					"name": "comment.block.jab",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.jabberwocky"
}
