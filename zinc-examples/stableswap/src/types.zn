//!
//! The Curve Stableswap contract types.
//!

type Address = u160;
type Balance = u248;

enum TokenId {
    First = 1,
    Second = 2,
}

impl TokenId {
    pub fn opposite(self) -> Self {
        match self {
            Self::First => Self::Second,
            Self::Second => Self::First,
        }
    }
}

struct Transaction {
    from: Address,
    to: Address,
    token_id: TokenId,
    amount: Balance,
}
