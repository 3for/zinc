/*
    The merkle tree root hash validator.
*/

mod lib;

use std::crypto;

struct PublicInput {
    address: [bool; 10],
    balance: field,
    root_hash: lib::Digest,
}

fn main(
    address: [bool; 10],
    balance: field,
    merkle_path: [lib::Digest; 10]
) -> PublicInput {
    let leaf_hash = lib::balance_hash(balance);

    let root_hash = lib::restore_root_hash(
        leaf_hash,
        address,
        merkle_path,
    );

    struct PublicInput {
        address: address,
        balance: balance,
        root_hash: root_hash,
    }
}
